# Ingestor service image
FROM ledgerflux-common:latest

# Copy ingestor service
COPY services/ingestor/ ./services/ingestor/

# Expose health check port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Run ingestor
ENTRYPOINT ["uv", "run", "python", "-m", "services.ingestor.app"]
CMD ["--products", "BTC-USD,ETH-USD", "--nats-urls", "nats://nats:4222"]
